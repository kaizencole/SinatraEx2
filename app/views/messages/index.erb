<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%=message.id %>"><small>(by: <%= message.author %>) </small></h3>
    <p>
      <%= message.content %>
    </p>
    <p>
      <%= message.url %>
    </p>
    <br>
    <p>
      <a href="/messages/new"> Post a message! </a>
    </p>
    <br>
    <br>
  </div>
<% end %>
